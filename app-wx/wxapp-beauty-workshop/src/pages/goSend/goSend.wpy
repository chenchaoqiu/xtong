  .dialog-present {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    z-index: 110;
    background-color: rgba(0,0,0,.8);
    overflow: hidden;
    .modal-wrap {
      padding: 0 60rpx;
      margin-top: 374rpx;
      .centen {
        position: relative;
        text-align: center;
