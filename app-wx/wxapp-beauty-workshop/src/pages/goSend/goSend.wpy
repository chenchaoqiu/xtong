          }
          .confirm {
            background-color: #27CAD3;
            border: 0 !important;
            border-radius: 0 !important;
            &::before {
              border: 0 !important;
              border-radius: 0 !important;
            }
            &::after {
              border: 0 !important;
              border-radius: 0 !important;
