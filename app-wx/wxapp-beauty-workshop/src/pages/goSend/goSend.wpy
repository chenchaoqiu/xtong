</style>
<template>
  <!--<view style="height: 1rpx;width: 100%;background: #dddddd;position: fixed;top:0;left: 0;overflow: hidden" ></view>-->
  <!--swiper-tab-->
  <view  class="swiper-tab"  >
    <view class="swiper-tab-list {{currentTab==0 ? 'active' : ''}}" data-current="0" bindtap="swichNav" >可赠项目</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'active' : ''}}" data-current="1" bindtap="swichNav" >已赠项目</view>
  </view>
  <view current="{{currentTab}}" class="swiper-box"  style="height:{{winHeight}}rpx;"  >
    <!--可增项目-->
    <view  style="overflow-y: scroll">
      <view class="list" wx:for="{{ableList}}" wx:key="{{item.giftAssignDetailId}}" wx:if="{{ableList.length != 0}}">
        <navigator url="/pages/productDetails/productDetails?salePackageId={{item.salePackageId}}" hover-class="none" class="list-con">
          <view class="con-img">
            <image src="{{item.coverImageUrl}}" style="width: 210rpx;height: 140rpx;"></image>
          </view>
          <view class="con-r">
            <text class="title font-30 color-333" >{{item.salePackageName}}</text>
            <text class="des font-24 color-999">{{item.salePackageShortName}}</text>
          </view>
        </navigator>
        <view class="info-ls">
          <view class="pj-info-box">
            <view class="specification">
              <view  class="pj-num" wx:if="{{item.effectDay > 0}}">有效期： {{item.effectDay}} 天</view>
              <view  class="pj-num" wx:else>有效期至永久有效</view>
            </view>
            <block wx:if="{{currentTab == 0}}">
              <view class="pay" wx:if="{{item.sendSuccessNum > 0}}">转赠中：{{item.sendSuccessNum}} 次</view>
              <view class="pay" wx:else>可赠次数：{{item.remainServiceNum}} 次</view>
            </block>
            <block wx:else>
              <view class="pay">赠送次数：{{item.sendServiceNum}} 次</view>
            </block>
          </view>
          <view class="btn-wrap clearfix">
            <block wx:if="{{currentTab == 0}}">
              <!--<view class="btn pull-right" @tap="" >转赠</view>-->
              <view class="btn pull-right" wx:if="{{item.isAllowedSend == 1}}"  @tap.stop="present({{index}},{{item}})">转赠</view>
              <view class="btn pull-right" wx:if="{{item.isAllowedSend == 0}}"  @tap.stop="cancelPresent({{item.orderSendId}})">取消转赠</view>
            </block>
            <block wx:else>
              <text style="padding-left: 24rpx;">已赠送</text>
              <view class="pull-right" @tap="" >领取用户 ：{{item.receiveMemberCompanyName}} {{item.receiveMemberCompanyMobile}}</view>
            </block>
          </view>
        </view>
      </view>
      <view wx:if="{{ableList.length == 0}}" style=" padding-top: 430rpx;text-align: center; font-size: 32rpx;color: #ddd;">暂无赠送礼包</view>
    </view>
  </view>
  <!--弹框-->
  <view wx:if="{{isShowPresent}}" class="dialog-present">
    <view class="modal-wrap">
      <view class="centen">
        <view class="title-1 ellipsis-2">{{checkedProject.salePackageName}}</view>
        <view class="title-2">（最多可赠送{{checkedProject.remainServiceNum}}次）</view>
        <view class="input-wrap">
          <view class="table-wrap">
            <view class="cell" style="width: 33%"></view>
            <image @tap="minus" mode="widthFix" src="../../images/minus.png" class="minus cell"></image>
            <text class="num cell">{{number}}</text>
            <image @tap="add" mode="widthFix" src="../../images/add.png" class="add cell"></image>
            <view class="cell" style="width: 33%"></view>
          </view>
        </view>
        <view class="btn-wrap clearfix">
          <view @tap="cancel" class="cancel pull-left">取消</view>
          <button open-type="share"  class="confirm pull-right">确定</button>
        </view>
      </view>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import api from '../../api/api'

  export default class goSend extends wepy.page {
    config = {
      navigationBarTitleText: '我的赠品',
      "enablePullDownRefresh": true, //开启下拉刷新
    }
    onShareAppMessage (res) {
      let _this = this;
      let {memberCompanyId=""} = wx.getStorageSync('session');
      if (res.from === 'button') {
        return {
          title: '您的好友给你赠送了1个项目',
          path: '/pages/productDetails/getGift?orderSendId=' + this.checkedProject.orderSendId + '&shareMemberCompanyId=' + memberCompanyId,
          imageUrl: this.checkedProject.coverImageUrl,
          success: function (res) {
            // 转发成功之后的回调
            if (res.errMsg == 'shareAppMessage:ok') {
              _this.sendConfirm();
            }
          },
          fail: function () {
            // 转发失败之后的回调
            if (res.errMsg == 'shareAppMessage:fail cancel') {
              // 用户取消转发
            } else if (res.errMsg == 'shareAppMessage:fail') {
              // 转发失败，其中 detail message 为详细失败信息
            }
          }
        }
      }
      return {
        title: '亲爱的 推荐你一个女生必备的小程序 要关注哦！',
        path: '/pages/index/index?shareMemberCompanyId='+wx.getStorageSync('session').memberCompanyId,
        imageUrl: this.imageUrl + 'share_img.png'
      }
    }
    data = {
      imageUrl: wepy.$appConfig.imageUrl,
      winWidth:"",
      winHeight:"",
      currentTab :0,
      istime:true,    //是否有截止时间
      ableList:[],//门店的信息列表-待使用
      doneList:[],  ////门店的信息列表-已完成
      serviecesList:[], //门店下服务的列表
      page:1,
      pageSize:0,
      isReset: true,
      AbleListdata:'',//接口返回的全data
      number: 1,
      isShowPresent: false,
      checkedProject: {}
    }
    //         点击tab切换
    swichNav( e ) {
      if( this.data.currentTab === e.target.dataset.current ) {
        return false;
      } else {
        this.currentTab = e.target.dataset.current;
        this.getAbleList(false);//获取我的服务-可赠送
      }
    }
//            滑动切换
//    bindChange( e ) {
//      this.currentTab = e.detail.current;
//    }
    watch = { }

    methods = {
      //点击展示
      more(index,b) {
        this.ableList[index].more = b;
        this.$apply();
      },
      minus() {
        this.number > 1 && this.number --
      },
      add() {
        this.checkedProject.remainServiceNum > this.number && this.number ++
      },
      confirm() {
        this.isShowPresent = false;
      },
      cancel() {
        this.isShowPresent = false;
      },
      present(index,obj,e) {
        this.number = 1;
        this.isShowPresent = true;
        this.checkedProject = obj;
        this.sendCreate();
      },
      cancelPresent(id) {
        this.sendCancel(id);
      }
    }
//    上拉刷新
    onPullDownRefresh()
    {
      this.isReset = false;
      wx.showNavigationBarLoading(); //在标题栏中显示加载
      //模拟加载
      this.getAbleList(false);
      setTimeout(function()
      {
        wx.hideNavigationBarLoading(); //完成停止加载
        wx.stopPullDownRefresh() //停止下拉刷新
        this.isReset = true;
      }.bind(this),1500);
    }
//    下拉加载更多
    onReachBottom() {
      if (!this.isReset) {
        return
      }
      if (this.ableList.length < this.pageSize) {
        this.page = this.page + 1;
        this.getAbleList(true);
      } else {
        wx.showToast({
          title: '没有更多了',
          icon: 'loading',
          duration: 2000
        })
        return;
      }
    }
    //我的增品-可增项目
    async getAbleList(e){
      if(!e){
        this.page=1;
      }
      if(this.currentTab == 0){
        const getAbleList = await api.assignPageList({
          query: {
            pageNo:this.page,//   第几页
            pageSize:8,   //显示几条
          }
        });
        this.AbleListdata = getAbleList;
      }else if(this.currentTab ==1){
        const getAbleList = await api.sendPageList({
          query: {
            pageNo: this.page,//   第几页
            pageSize: 8,   //显示几条
          }
        });
        this.AbleListdata = getAbleList;
      }
      if(e){
        this.ableList = this.ableList.concat(this.AbleListdata.data.list);
      }else{
        this.ableList = this.AbleListdata.data.list;      //门店的信息列表
        this.pageSize =  this.AbleListdata.data.totalSize;
      }
      this.$apply();
    }
    async sendCancel(id) {
      const {imei_error_code} = await api.sendCancel({
        query:{
          orderSendId: id
        }
      });
      if (imei_error_code == 0) {
        this.getAbleList();
      }
    }
    async sendCreate() {
      const {imei_error_code,data:{orderSendId}} = await api.sendCreate({
        query:{
          sendType: 2,
          giftAssignDetailId: this.checkedProject.giftAssignDetailId,//this.checkedProject.orderCourseCardId,
          sendServiceNum: this.number
        }
      });

      if (imei_error_code == 0) {
        /*this.getUsableProjectList();
         this.isShowPresent = false;*/
        this.checkedProject.orderSendId = orderSendId;
      }
    }
    async sendConfirm() {
      const {imei_error_code} = await api.sendConfirm({
        query:{
          orderSendId: this.checkedProject.orderSendId,
          sendServiceNum: this.number
        }
      });

      if (imei_error_code == 0) {
        this.getAbleList();
        this.isShowPresent = false;
      }
    }


    async onLoad() {
      // 获取系统信息
      // 获取高度
      wx.getSystemInfo({
        success: function (res) {
          this.winWidth = res.windowWidth;
          var winHeight = res.windowHeight;
          var rpxR = 750 / this.winWidth;
//          this.winHeight = winHeight * rpxR;
          //下面swiper的高度
          this.winHeight = winHeight * rpxR - 90;
        }.bind(this)
      });
      this.getAbleList(false);//获取我的服务-可赠送
    }
  }
</script>
